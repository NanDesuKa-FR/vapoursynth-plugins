#!/usr/bin/make -f

export V=1
export CFLAGS=-O3
export CXXFLAGS=-O3
export CPPFLAGS=
export LDFLAGS=


%:
	dh ${@} --parallel

override_dh_auto_clean:
	touch config.mak
	dh_auto_clean -- distclean
	rm -f config.mak

override_dh_auto_install:
	install DESTDIR=$(CURDIR)/debian/tmp INSTALL_MODEL_WEIGHTS=0

override_dh_link:
	sed 's/@DEB_HOST_MULTIARCH@/$(DEB_HOST_MULTIARCH)/g' \
		debian/vapoursynth-extra-plugins.links.in > debian/vapoursynth-extra-plugins.links
	dh_link

override_dh_makeshlibs:

override_dh_clean:
	dh_clean debian/vapoursynth-extra-plugins.links

